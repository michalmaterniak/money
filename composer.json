{
  "name": "commitm/money",
  "description": "Money. Money pattern's Implementation",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Micha≈Ç Materniak"
    }
  ],
  "require": {
    "php": "^8.2"
  },
  "autoload": {
    "psr-4": {
      "Money\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Money\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "11.0.*",
    "symfony/var-dumper": "v7.0.*",
    "friendsofphp/php-cs-fixer": "^3.66",
    "symfony/finder": "^7.2",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "tests": "./vendor/bin/phpunit",
    "cs-fix": "PHP_CS_FIXER_IGNORE_ENV=1 PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/php-cs-fixer --allow-risky=yes fix ./",
    "cs-check": "PHP_CS_FIXER_IGNORE_ENV=1 PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/php-cs-fixer --allow-risky=yes check ./"
  }
}
